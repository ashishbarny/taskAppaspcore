<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - taskApp</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/modernizr-2.6.2.js"></script>
 
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul id="nav" class="nav navbar-nav">
                        @*<li id="home">@Html.ActionLink("Home", "Home", "Home")</li>*@
                        <li class="admin-view">@Html.ActionLink("Dashboard", "ListAll", "Projects")</li>
                        <li class="admin-view">@Html.ActionLink("Admin Panel", "ListAll", "Users")</li>
                        <li id="registerNav">@Html.ActionLink("Create Employee", "Register", "Users")</li>
                        <li class="admin-view">@Html.ActionLink("Create Customer", "Create", "Customers")</li>
                        <li class="admin-view">@Html.ActionLink("Create Project", "Create", "Projects")</li>
                        <li class="admin-view user-view">@Html.ActionLink("Create Task", "Create", "Tasks")</li>
                        <li class="admin-view">@Html.ActionLink("Users Report", "TasksPerUserReport", "Users")</li>
                        <li class="admin-view">@Html.ActionLink("Project Report", "ProjetWithLeftTasks", "Projects")</li>
                        @*<li id="loginNav" >@Html.ActionLink("Login", "Login", "Users")</li>*@

                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - taskApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/UserManagement.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
